<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CategoryLabel" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="MaxWidth" Value="150"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Margin" Value="10"/>
    </Style>
    <Style x:Key="CheckedCategoryLabel" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="MaxWidth" Value="200"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="#94b80a"/>
        <Setter Property="Margin" Value="10"/>
    </Style>
    <Style x:Key="SubmitButton" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="#94b80a"/>
        <Setter Property="Background" Value="#b2de0c"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Margin" Value="10 0 10 0"/>
        <Setter Property="CornerRadius" Value="15"/>
    </Style>
    <Style x:Key="ProductBorder" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#f5f8e7"/>
        <Setter Property="BorderBrush" Value="#e3e3e3"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="MinWidth" Value="500"/>
    </Style>
    <Style x:Key="ProductStackPanel" TargetType="{x:Type StackPanel}">
        <Setter Property="Orientation" Value="Horizontal"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="ProductLabel" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
    </Style>
    <Style x:Key="ProductValue" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Foreground" Value="#94b80a"/>
    </Style>

    <Style x:Key="ConfigurationPageProductGrid" TargetType="{x:Type Grid}">
       
    </Style>
    <Style x:Key="ConfigurationPageProductLabel" TargetType="{x:Type Label}">
        <Setter Property="Background" Value="#f5f8e7"/>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="32"></Setter>
        <Setter Property="Width" Value="200"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0 0 0 15"/>
    </Style>
    <Style x:Key="ConfigurationPageProductBorder" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderBrush" Value="#94b80a"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="Margin" Value="0 20 0 0"/>
        <Setter Property="MinWidth" Value="600"/>
        <Setter Property="MaxWidth" Value="1000"/>
    </Style>
    <Style x:Key="ConfigurationPageProductInfoStackpanel" TargetType="{x:Type StackPanel}">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>