<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CategoryLabel" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="MaxWidth" Value="150"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="#ececec"/>
        <Setter Property="Margin" Value="10"/>
    </Style>
    <Style x:Key="CheckedCategoryLabel" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="MaxWidth" Value="200"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="#94b80a"/>
        <Setter Property="Margin" Value="10"/>
    </Style>
    <Style x:Key="SubmitButton" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="#94b80a"/>
        <Setter Property="Background" Value="#b2de0c"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Margin" Value="10 0 10 0"/>
        <Setter Property="CornerRadius" Value="15"/>
    </Style>
</ResourceDictionary>